<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/feed_back_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tnTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精工01"
                android:textColor="@color/black"
                android:textSize="@dimen/feed_back_size" />

            <TextView
                android:id="@+id/backType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="课时反馈"
                android:textColor="@color/course_solid"
                android:textSize="@dimen/feed_back_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cnTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数学"
                android:textColor="@color/black"
                android:textSize="@dimen/feed_back_size" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="课时18"
                android:textColor="@color/course_solid"
                android:textSize="@dimen/feed_back_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/color_small_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课时间"
                android:textColor="@color/teach_txt_color2"
                android:textSize="@dimen/feed_back_size" />

            <TextView
                android:id="@+id/finishDataTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2017-09-8 13:44"
                android:textColor="@color/teach_txt_color2"
                android:textSize="@dimen/feed_back_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/cnFBBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/feed_back_btn"
                android:text="顾问反馈"
                android:textColor="@color/white_bg_home"
                android:textSize="16sp" />

            <Button
                android:id="@+id/teacherFBBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/feed_back_btn"
                android:text="老师反馈"
                android:textColor="@color/white_bg_home"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>