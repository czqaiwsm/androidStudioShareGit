<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@null"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teacherTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_margin"
            android:layout_weight="1"
            android:text="小学语文"
            android:textColor="@color/black"
            android:textSize="@dimen/teache_curose" />

        <TextView
            android:id="@+id/courseTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_margin"
            android:layout_weight="1"
            android:text="小学语文"
            android:textColor="@color/black"
            android:textSize="@dimen/teache_curose" />

        <TextView
            android:id="@+id/courseHourTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_margin"
            android:layout_weight="1"
            android:text="小学语文"
            android:textColor="@color/black"
            android:textSize="@dimen/teache_curose" />

        <TextView
            android:id="@+id/finishTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_margin"
            android:layout_marginRight="@dimen/msg_margin"
            android:layout_weight="0.5"
            android:text="完成"
            android:singleLine="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/login_normal"
            android:padding="3dp"
            android:textSize="@dimen/teache_curose" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/buy"
        android:layout_marginLeft="@dimen/msg_margin"
        android:layout_marginRight="@dimen/msg_margin"
        android:layout_marginTop="4dp"
        android:background="@color/color_small_gray" />
</LinearLayout>